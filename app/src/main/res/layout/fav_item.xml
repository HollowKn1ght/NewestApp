<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/fav_item">

    <ImageView
        android:id="@+id/favImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@color/black"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/favText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Text"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/activity_horizontal_margin_left"
        android:maxLines="4"
        android:textAppearance="?android:textAppearanceMedium"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateOnFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/minimal_text_size"
            tools:text="Mar 6, 2010" />

        <Button
            android:id="@+id/btnOnFav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_baseline_favorite_24"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"/>

    </LinearLayout>

</LinearLayout>